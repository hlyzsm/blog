<h1><font color="red"><%= @post.title %></font></h1>

<%= @post.text %>

<h2><font color="red">评论</font></h2>

<% @post.comments.each do |comment| %>
  <p><%= comment.text %></p>
  <p><%= time_ago_in_words comment.created_at %> ago </p>
  <p><%= link_to "删除评论", [@post, comment], :method => :delete, :confirm => "确定要删除该评论吗?" %></p>
<% end %>

<%= form_for [@post,@post.comments.build] do |f| %>
  <p><%= f.text_area :text, :size => '40x10' %> </p>
  <p><%= f.submit "提交" %> </p>
<% end %>
<br/>

<p>
<%= link_to "返回主页", posts_path %>
|
<%= link_to "编辑", edit_post_path(@post) %>
|
<%= link_to "删除",@post,:method => :delete, :confirm => "确定要删除该博客吗?" %>
</p>
